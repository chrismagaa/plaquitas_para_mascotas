<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".plantillas.plantillaIFEFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutPlaca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewTrasera"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:cardCornerRadius="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardViewFrente">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/contraint_background_detras"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/ic_fondo_detras_ife">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="26dp"
                    app:cardCornerRadius="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="80dp"
                        android:layout_height="90dp"
                        android:layout_margin="8dp"
                        app:srcCompat="@drawable/ic_pawprint" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="26dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="8dp"
                    android:autoSizeTextType="none"
                    android:justificationMode="inter_word"
                    android:text="@string/reverse_plaquita_text"
                    android:textColor="@color/black"
                    android:textSize="8sp"
                    app:layout_constraintBottom_toTopOf="@+id/cardView5"
                    app:layout_constraintEnd_toStartOf="@+id/cardView3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/cardView3"
                    tools:ignore="SmallSp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@+id/cardView3"
                    app:layout_constraintEnd_toEndOf="@+id/textView2"
                    app:layout_constraintStart_toStartOf="@+id/textView2">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="26dp">

                        <TextView
                            android:id="@+id/editNombreDueno"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="DueÃ±o"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    app:layout_constraintEnd_toEndOf="@+id/cardView5"
                    app:layout_constraintStart_toStartOf="@+id/cardView5"
                    app:layout_constraintTop_toBottomOf="@+id/cardView5" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Huella"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    app:layout_constraintEnd_toEndOf="@+id/cardView3"
                    app:layout_constraintStart_toStartOf="@+id/cardView3"
                    app:layout_constraintTop_toBottomOf="@+id/cardView3" />

                <View
                    android:id="@+id/view3"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_marginTop="15dp"
                    android:background="#000000"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewFrente"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/contraint_background"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/ic_fondo_nuevo_ife">

                <TextView
                    android:id="@+id/tvPrimerTitulo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="80dp"
                    android:layout_marginTop="4dp"
                    android:text="@string/txt_instituto_federal_canino"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvSegundoTitulo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_registro_de_amiguito"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/tvPrimerTitulo"
                    app:layout_constraintTop_toBottomOf="@+id/tvPrimerTitulo" />

                <TextView
                    android:id="@+id/tvTercerTitulo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_credencial_ladrar"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/tvSegundoTitulo"
                    app:layout_constraintTop_toBottomOf="@+id/tvSegundoTitulo" />

                <TextView
                    android:id="@+id/tvNombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="6dp"
                    android:background="#F3F0F0"
                    android:fontFamily="@font/roboto_bold"
                    android:text="@string/txt_nombre"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvTercerTitulo" />

                <TextView
                    android:id="@+id/tvTel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:background="#FAF8F8"
                    android:fontFamily="@font/roboto_bold"
                    android:text="@string/txt_Tel"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvNombre" />

                <TextView
                    android:id="@+id/tvRaza"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:background="#FDFBFB"
                    android:fontFamily="@font/roboto_bold"
                    android:text="@string/txt_Raza"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewDomicilio" />

                <TextView
                    android:id="@+id/tvColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:background="#F8F7F7"
                    android:fontFamily="@font/roboto_bold"
                    android:text="@string/txt_Color"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvRaza" />

                <TextView
                    android:id="@+id/tvOcupacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:background="#F8F6F6"
                    android:fontFamily="@font/roboto_bold"
                    android:text="@string/txt_Ocupacion"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvColor" />

                <TextView
                    android:id="@+id/tvEdad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:background="#FBFBFB"
                    android:fontFamily="@font/roboto_bold"
                    android:text="@string/txt_EDAD"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvOcupacion" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvPet"
                    android:layout_width="90dp"
                    android:layout_height="110dp"
                    android:layout_marginEnd="16dp"
                    app:cardCornerRadius="8dp"
                    app:layout_constraintBottom_toBottomOf="@+id/tvEdad"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tvNombre">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#A67474">

                        <ImageView
                            android:id="@+id/imageViewPet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#F6F5F5"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/ic_pet" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/editNombre"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/roboto_regular"
                    android:lines="1"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="@+id/tvNombre"
                    app:layout_constraintEnd_toStartOf="@+id/cvPet"
                    app:layout_constraintStart_toEndOf="@+id/tvNombre"
                    app:layout_constraintTop_toTopOf="@+id/tvNombre" />

                <TextView
                    android:id="@+id/editTel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/roboto_regular"
                    android:lines="1"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="@+id/tvTel"
                    app:layout_constraintEnd_toStartOf="@+id/cvPet"
                    app:layout_constraintStart_toEndOf="@+id/tvTel"
                    app:layout_constraintTop_toTopOf="@+id/tvTel" />

                <TextView
                    android:id="@+id/editRaza"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/roboto_regular"
                    android:lines="1"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="@+id/tvRaza"
                    app:layout_constraintEnd_toStartOf="@+id/cvPet"
                    app:layout_constraintStart_toEndOf="@+id/tvRaza"
                    app:layout_constraintTop_toTopOf="@+id/tvRaza" />

                <TextView
                    android:id="@+id/editColor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/roboto_regular"
                    android:lines="1"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="@+id/tvColor"
                    app:layout_constraintEnd_toStartOf="@+id/cvPet"
                    app:layout_constraintStart_toEndOf="@+id/tvColor"
                    app:layout_constraintTop_toBottomOf="@+id/tvRaza" />

                <TextView
                    android:id="@+id/editOcupacion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/roboto_regular"
                    android:lines="1"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="@+id/tvOcupacion"
                    app:layout_constraintEnd_toStartOf="@+id/cvPet"
                    app:layout_constraintStart_toEndOf="@+id/tvOcupacion"
                    app:layout_constraintTop_toTopOf="@+id/tvOcupacion" />

                <TextView
                    android:id="@+id/editEdad"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/roboto_regular"
                    android:lines="1"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="@+id/tvEdad"
                    app:layout_constraintEnd_toStartOf="@+id/cvPet"
                    app:layout_constraintStart_toEndOf="@+id/tvEdad"
                    app:layout_constraintTop_toTopOf="@+id/tvEdad" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:layout_constraintBottom_toTopOf="@+id/tvNombre"
                    app:layout_constraintEnd_toStartOf="@+id/tvSegundoTitulo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_pawprint" />

                <TextView
                    android:id="@+id/textViewDomicilio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#FAF8F8"
                    android:fontFamily="@font/roboto_bold"
                    android:text="@string/txt_domicilio"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="@+id/tvTel"
                    app:layout_constraintTop_toBottomOf="@+id/tvTel" />

                <TextView
                    android:id="@+id/editDomicilio"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/roboto_regular"
                    android:lines="1"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="@+id/textViewDomicilio"
                    app:layout_constraintEnd_toStartOf="@+id/cvPet"
                    app:layout_constraintStart_toEndOf="@+id/textViewDomicilio" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:src="@drawable/ic_baseline_edit_24"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayoutPlaca"
        app:layout_constraintEnd_toStartOf="@+id/btnImagen"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnImagen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:src="@drawable/ic_baseline_add_a_photo_24"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayoutPlaca"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnEdit"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>